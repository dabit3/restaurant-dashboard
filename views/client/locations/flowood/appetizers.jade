extends ../../../layout

block content
	h2 Appetizers

	div(class="form-holder")
		form(method='post', action='/flowood/appetizers')
			div(class="input-holder")
				input(for='title' name='title' placeholder='Appetizer Name')
			div(class="input-holder")
				input(for='description' name='description' placeholder='description')
			div(class="input-holder")
				input(for='option' name='option' placeholder='options - optional')
			div(class="button-holder")
				button Submit

	div(ng-controller="FlowoodAppController as app", style="margin-top:20px;")
		div.menu-item(ng-repeat="app in app.data" style="border:1px solid rgba(0,0,0,.1);padding:0px 20px 25px;;margin-bottom:10px;")
			h2 {{app.title}}
			p(style="font-size:18px;") {{app.description}}
			p(style="color:rgba(0,0,0,.6);font-style:italic;font-size:14px") {{app.option}}
			a.nicebutton(href='/flowood/appetizers/delete/{{app._id}}', style="color:#ffffff;background:#00B7FF;padding:10px 25px;text-decoration:none;") Delete